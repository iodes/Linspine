<UserControl x:Class="Linspine.Controls.BaseBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Linspine.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="150">

    <Border Background="{Binding BlockBackground}" BorderBrush="{Binding BlockBorder}" BorderThickness="{Binding BlockBorderThickness}" CornerRadius="{Binding BlockCornerRadius}">
        <StackPanel x:Name="BlockContent" Orientation="Horizontal"/>
    </Border>
</UserControl>
